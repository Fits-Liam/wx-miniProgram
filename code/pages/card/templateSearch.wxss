.m-search {
    display: flex; align-items: center; flex: 1;
    position: relative;
    padding: 30rpx; margin-bottom: 20rpx;
    background-color: #fff;
    font-size: 28rpx;
}
.m-search__icon {
    position: absolute; left: 50rpx; top: 50%; z-index: 10;
    transform: translateY(-50%);
}
.m-search__input {
    flex: 1;
    height: 62rpx; line-height: 62rpx;
    padding: 0 10rpx 0 65rpx;
    background-color: #f2f2f2;
    border: 1px solid #e5e5e5;
    border-radius: 30rpx; color: #fff;
    color: #333;
}
.m-search__action {
    margin-left: 25rpx;
}

.m-empty{
    display: flex; align-items: center;
    padding: 50rpx;
}
.m-empty__line{
    flex-grow: 1;
    height: 1px;
    background: #d1d1d1;
}
.m-empty__text{
    font-size: 26rpx; color: #999;
    padding: 0 20rpx;
}

.m-end{
    display: flex; align-items: center;
    padding: 50rpx;
}
.m-end__line{
    flex-grow: 1;
    height: 1px;
    background: #d1d1d1;
}
.m-end__text{
    font-size: 26rpx; color: #999;
    padding: 0 20rpx;
}

.card-post{
    margin-top: 20rpx;
    background-color: #fff;
}
.card-post__title{
    padding: 17rpx 0; margin: 0 30rpx;
    border-bottom: 1px solid #E2E2E2;
    font-size: 30rpx; line-height: 48rpx; color: #25A0D2; text-align: center;
}
.card-article{
    display: flex;
    padding: 30rpx;
    border-bottom: 1px solid #E2E2E2;
}
.card-article.is-checked{
    background-image: url('data:image/png;base64,');
    background-position: 670rpx 140rpx;
    background-repeat: no-repeat;
    background-size: 50rpx;
}
.card-article:last-child{
    border: 0;
}
.card-article__thumb{
    margin-right: 30rpx;
}
.card-article__img{
    width: 232rpx; height: 158rpx;
    border-radius: 8rpx;
}
.card-article__content{
    flex: 1;
}
.card-article__title{
    padding-top: 10rpx;
    font-size: 32rpx; line-height: 44rpx;
}
.card-article__meta{
    margin-top: 30rpx;
    font-size: 26rpx; line-height: 1; color: #999;
}
.card-article__tag{
    display: inline-block;
    margin-right: 35rpx;
}
.card-article__tag .ui-icon{
    margin-right: 15rpx;
}