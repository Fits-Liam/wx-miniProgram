.info_contain {
	min-height: 220rpx;
}

.search-contain {
	padding: 18rpx 30rpx;
}

.search-wrap {
	height: 65rpx;
	padding-left: 82rpx;
	box-sizing: border-box;
	background-color: #ebebeb;
	border-radius: 30rpx;
	width: 88%;
	float: left;
}

.search_input {
	width: 100%;
	height: 100%;
	color: #999999;
	font-size: 28rpx;
}

.search-btn {
	float: left;
	width: 12%;
	margin-top: 10rpx;
	text-align: right;
}

.search-content {
	margin-top: 15rpx;
}

.search-item {
	widths: 690rpx;
	height: 246rpx;
	border-radius: 20rpx;
	margin: 30rpx 0;
}

.ph-3 {
	padding: 0 30rpx 0 30rpx;
}

.info-slide-bar {
	position: absolute;
	bottom: -1px;
	left: 0;
	background: #2CC3CE;
	height: 2px;
	width: 33%;
	-webkit-transform: translate3d(0,0,0);
	transform: translate3d(0,0,0);
	transition:-webkit-transform 0.6s;
	transition:transform 0.6s;
	transition:transform 0.6s, -webkit-transform 0.6s;
}


.edu-item-contain {
	padding: 30rpx 0;
}

.edu-item-img {
	width: 232rpx;
	height: 168rpx;
	border-radius: 8rpx;
}

.edu-item-desc {
	width: 66%;
	padding-left: 30rpx;
}

.edu-item-desct {
	line-height: 44rpx;
}

.edu-item-descb {
	margin-top: 30rpx;
}

.act_nav {
	border-top: 1rpx solid transparent;
	margin-top: 15rpx;
	color:#6B6B6B;
	overflow-x: hidden;
	white-space:nowrap;
	box-sizing: border-box;
	min-height: 80rpx;
}

.act_navitem { 
	border-bottom: 2px solid transparent;
	display: inline-block;
	vertical-align: middle;
	padding: 20rpx 25rpx;
	text-align: center;
	transform: scale(0.9);
	transition: all 0.2s;
	width:50%;
}

.navitem_active {
	transform: scale(1);
	color: #2CC3CE;
	font-weight: bold;
	border-bottom: 2px solid #2CC3CE;
}

