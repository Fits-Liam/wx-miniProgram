button[disabled]:not([type]){
    background: none;
}
button::after {
    border: 0;
}

.rec-section{
    min-height: 100vh;
    background-color: #fff;
    border-top: 15rpx solid #f2f2f2;
}

.rec-assess {
    width: 690rpx;
    margin: 15rpx auto 0 auto;
    border-radius: 8rpx;
    box-shadow: 0 17rpx 27rpx rgba(112, 112, 112, .17);
    line-height: 1;
    overflow: hidden;
}
.rec-assess__img{
    width: 690rpx; height: 246rpx;
    vertical-align: top;
}

.rec-article {
    width: 690rpx;
    padding: 30rpx;
    margin: 30rpx auto 0 auto;
    border-radius: 8rpx;
    background-color: #F4F4F4;
    font-size: 32rpx;
}
.rec-assess__hd{
    margin-bottom: 20rpx;
    line-height: 1; font-weight: 700;
}
.rec-assess__bd{
    line-height: 44rpx;
}

.rec-search {
    display: flex; align-items: center; flex: 1;
    position: relative;
    padding: 40rpx 30rpx;
    border-bottom: 1px solid #E5E5E5;
    font-size: 28rpx;
}
.rec-search__label{
    margin-right: 20rpx;
}
.rec-search__input {
    flex: 1;
    height: 76rpx; line-height: 76rpx;
    padding: 0 20rpx;
    border: 1px solid #C0C0C0;
    border-radius: 10rpx;
    box-sizing: border-box;
}
.rec-search__action {
    width: 130rpx; height: 76rpx; line-height: 76rpx;
    margin-left: 20rpx;
    background-color: #25A0D2;
    border-radius: 10rpx;
    color: #fff; text-align: center;
}

.rec-userlist{
    padding: 0 30rpx;
    margin-bottom: 20rpx;
}

.rec-contact{
    display: flex;
    width: 100%;
    padding: 10rpx 0;
    border-bottom: 1px solid #E2E2E2;
    font-size: 32rpx; line-height: 1;
}
.rec-contact_title{
    padding: 45rpx 0;
    border-bottom: 1px solid #E2E2E2;
    font-size: 28rpx;
}
.rec-contact__avatar{
    margin-right: 20rpx;
}
.rec-contact__avatar .avatar {
    width: 98rpx; height: 98rpx;
    border-radius: 50%;
    vertical-align: top;
    will-change: transform;
    box-shadow: 0 0 0 1px #e7e7e7;
}
.rec-contact__info{
    display: flex; flex-direction: column; justify-content: center; flex: 1;
}
.rec-contact__action{
    display: flex; align-items: center;
    position: relative;
}